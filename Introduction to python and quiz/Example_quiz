
score = 0

#Question one
answer = input('What is my name?')

if answer == ' your name':
   print('Correct')
   score = score + 1
   print('Your score is:', (score))
else:
   print('incorrect')
      score = score - 1
      print('Your score is:', (score))

#Question two    
